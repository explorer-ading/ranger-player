<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_files"
            android:id="@+id/button_files"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:onClick="launchFileWindow"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_server"
            android:id="@+id/button_server"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="launchServer"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_setting"
            android:id="@+id/button_setting"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="launchSettings"/>
</RelativeLayout>
