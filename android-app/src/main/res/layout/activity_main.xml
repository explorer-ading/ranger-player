<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity" >
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/button_files"
            android:id="@+id/button_files"
            android:onClick="launchFileWindow"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/button_server"
            android:id="@+id/button_server"
            android:onClick="launchServer"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:text="@string/button_setting"
            android:id="@+id/button_setting"
            android:onClick="launchSettings"/>
</LinearLayout>
